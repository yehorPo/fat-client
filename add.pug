html
    title Create
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body
        div(class='container text-center')
            h2(class='my-5 badge rounded-pill bg-dark' style="font-size : 2.4rem") Adding post
            form(action="/api/post" class="mx-auto " method="POST")
                div(class="w-50 mx-auto")
                    p(class='badge rounded-pill bg-dark' style="font-size : 1.2rem") Name
                    input(name="name" class="form-control")
                div(class="w-50 mx-auto")
                    p(class='badge rounded-pill bg-dark' style="font-size : 1.2rem") Author
                    input(type="text" name="author" class="form-control")
                div(class="w-50 mx-auto")
                    p(class='badge rounded-pill bg-dark' style="font-size : 1.2rem") Content
                    input(type="text" name="content" class="form-control")
                button(type="submit" class="btn btn-dark my-5 mx-3" ) Submit
