    body
        div(class='container text-center my-5')
            table(class='table table-bordered table-striped my-4 table-dark')
                thead(class='thead-dark')
                    tr
                        th(class="text-center") Id
                        th(class="text-center") Name
                        th(class="text-center") Author
                tbody
                    each blog in blogs
                        tr
                            th(class="text-center")=blog['_id']
                            th(class="text-center")=blog['name']
                            th(class= "text-center")=blog['author']
            a(class='btn btn-dark btn-block my-5 w-25 mx-auto' href='/add') Add